<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Share">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile"
            />

        <TextView
            android:id="@+id/link1"
            style="@style/word"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/share1"
            android:text="@string/link_share_whats" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/share1"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/link2"
            style="@style/word"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/link1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/share2"
            android:text="@string/link_share_face" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/share2"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/link3"
            style="@style/word"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/link2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/share3"
            android:text="@string/link_share_insta" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/share3"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/link4"
            style="@style/word"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/link3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/share3"
            android:text="@string/link_share_tiktok" />

</RelativeLayout>